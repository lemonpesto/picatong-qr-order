      <!-- ì†¡ê¸ˆ í™•ì¸ ëª©ë¡ -->
      <div id="paid-list" class="order-list">
        <% unpaidOrders.forEach(order => { %>
        <div class="order-card" data-table="<%= order.tableNum %>" data-id="<%= order._id %>">
          <div class="order-header">
            <span>T<%= order.tableNum %></span>
